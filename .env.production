# Production Environment Configuration for Cryptee
# Copy this to .env for production deployment

# Flask Configuration
FLASK_APP=backend/app/__init__.py
FLASK_ENV=production
SECRET_KEY=change-this-to-a-secure-random-key-in-production
DEBUG=false

# Database Configuration (MySQL for production)
DATABASE_URL=mysql+pymysql://cryptee:your-secure-password-here@localhost/cryptee

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-different-secure-random-key
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# File Storage Configuration
UPLOAD_FOLDER=backend/uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,jpg,jpeg,png,gif,zip,rar,mp4,avi,mov

# Security Configuration
BCRYPT_ROUNDS=12
ENCRYPTION_KEY_ITERATIONS=100000

# Redis Configuration (for rate limiting and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Configuration
APP_NAME=Cryptee
APP_URL=https://yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/cryptee.log

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Server Configuration
HOST=0.0.0.0
PORT=5000

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_STORAGE_URL=redis://localhost:6379/0